{
  "extends": ["tslint:recommended", "tslint-sonarts"],
  "rules": {
    "align": [true, "elements", "members", "parameters", "statements"],
    "array-type": [true, "array"],
    "arrow-parens": false,
    "arrow-return-shorthand": true,
    "await-promise": true,
    "ban": [
      true,
      {
        "message": "Please do not commit focused spec descriptions.",
        "name": "fdescribe"
      },
      {
        "message": "Please do not commit focused single tests.",
        "name": "fit"
      }
    ],
    "ban-ts-ignore": true,
    "callable-types": true,
    "class-name": true,
    "cognitive-complexity": {
      "severity": "warning"
    },
    "comment-format": [true, "check-space"],
    "consecutive-overloads": {
      "severity": "warning"
    },
    "curly": true,
    "cyclomatic-complexity": false,
    "eofline": true,
    "file-name-casing": [true, "kebab-case"],
    "forin": true,
    "function-constructor": true,
    "import-spacing": true,
    "indent": [true, "spaces", 4],
    "interface-name": false,
    "interface-over-type-literal": true,
    "label-position": true,
    "max-classes-per-file": [true, 2],
    "max-line-length": [
      true,
      {
        "ignore-pattern": "^import |^export {(.*?)}",
        "limit": 140
      }
    ],
    "max-union-size": {
      "severity": "warning"
    },
    "mccabe-complexity": false,
    "member-access": false,
    "member-ordering": [
      true,
      {
        "alphabetize": true,
        "order": "statics-first"
      }
    ],
    "newline-per-chained-call": false,
    "no-accessor-field-mismatch": {
      "severity": "warning"
    },
    "no-all-duplicated-branches": {
      "severity": "warning"
    },
    "no-any": true,
    "no-arg": true,
    "no-array-delete": {
      "severity": "warning"
    },
    "no-big-function": {
      "severity": "warning"
    },
    "no-bitwise": false,
    "no-boolean-literal-compare": true,
    "no-case-with-or": {
      "severity": "warning"
    },
    "no-collapsible-if": true,
    "no-collection-size-mischeck": {
      "severity": "warning"
    },
    "no-commented-code": {
      "severity": "warning"
    },
    "no-console": [true, "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-dead-store": {
      "severity": "warning"
    },
    "no-debugger": true,
    "no-duplicate-in-composite": {
      "severity": "warning"
    },
    "no-duplicate-string": {
      "severity": "warning"
    },
    "no-duplicate-super": true,
    "no-duplicated-branches": {
      "severity": "warning"
    },
    "no-element-overwrite": {
      "severity": "warning"
    },
    "no-empty": false,
    "no-empty-destructuring": {
      "severity": "warning"
    },
    "no-empty-interface": true,
    "no-empty-nested-blocks": false,
    "no-eval": true,
    "no-extra-semicolon": {
      "severity": "warning"
    },
    "no-floating-promises": true,
    "no-gratuitous-expressions": {
      "severity": "warning"
    },
    "no-hardcoded-credentials": {
      "severity": "warning"
    },
    "no-identical-conditions": {
      "severity": "warning"
    },
    "no-identical-expressions": {
      "severity": "warning"
    },
    "no-identical-functions": {
      "severity": "warning"
    },
    "no-ignored-initial-value": {
      "severity": "warning"
    },
    "no-ignored-return": {
      "severity": "warning"
    },
    "no-in-misuse": {
      "severity": "warning"
    },
    "no-inconsistent-return": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-invariant-return": true,
    "no-inverted-boolean-check": true,
    "no-magic-numbers": [true, -1, 0, 1, 2, 3, 1000],
    "no-misleading-array-reverse": {
      "severity": "warning"
    },
    "no-misspelled-operator": {
      "severity": "warning"
    },
    "no-misused-new": true,
    "no-multiline-string-literals": {
      "severity": "warning"
    },
    "no-nested-incdec": false,
    "no-nested-template-literals": {
      "severity": "warning"
    },
    "no-null-keyword": true,
    "no-redundant-boolean": {
      "severity": "warning"
    },
    "no-redundant-jump": {
      "severity": "warning"
    },
    "no-redundant-parentheses": {
      "severity": "warning"
    },
    "no-return-type-any": {
      "severity": "warning"
    },
    "no-same-line-conditional": {
      "severity": "warning"
    },
    "no-self-assignment": {
      "severity": "warning"
    },
    "no-shadowed-variable": true,
    "no-small-switch": {
      "severity": "warning"
    },
    "no-statements-same-line": {
      "severity": "warning"
    },
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unconditional-jump": {
      "severity": "warning"
    },
    "no-undefined-argument": {
      "severity": "warning"
    },
    "no-unenclosed-multiline-block": {
      "severity": "warning"
    },
    "no-unnecessary-initializer": true,
    "no-unnecessary-type-assertion": true,
    "no-unthrown-error": {
      "severity": "warning"
    },
    "no-unused-array": {
      "severity": "warning"
    },
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-use-of-empty-return-value": {
      "severity": "warning"
    },
    "no-useless-cast": {
      "severity": "warning"
    },
    "no-useless-increment": {
      "severity": "warning"
    },
    "no-useless-intersection": {
      "severity": "warning"
    },
    "no-var-keyword": true,
    "no-var-requires": false,
    "no-variable-usage-before-declaration": {
      "severity": "warning"
    },
    "object-literal-key-quotes": [false],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "ordered-imports": false,
    "parameters-max-number": {
      "severity": "warning"
    },
    "prefer-const": true,
    "prefer-default-last": {
      "severity": "warning"
    },
    "prefer-for-of": {
      "severity": "warning"
    },
    "prefer-immediate-return": {
      "severity": "warning"
    },
    "prefer-optional": true,
    "prefer-promise-shorthand": {
      "severity": "warning"
    },
    "prefer-readonly": true,
    "quotemark": [true, "single", "avoid-escape"],
    "radix": false,
    "semicolon": [true, "always"],
    "strict-type-predicates": true,
    "switch-final-break": true,
    "trailing-comma": false,
    "triple-equals": [true, "allow-null-check"],
    "typedef": [true, "call-signature"],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "unnecessary-bind": true,
    "unnecessary-constructor": true,
    "use-primitive-type": {
      "severity": "warning"
    },
    "use-type-alias": {
      "severity": "warning"
    },
    "variable-name": false,
    "whitespace": false
  }
}
